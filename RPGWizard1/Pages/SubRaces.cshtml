@page
@model RPGWizard1.Pages.SubRacesModel

@{
    ViewData["Title"] = "Choose Your SubRace";
}

<h1>Choose Your SubRace</h1>

<p>
    @*<a asp-page="Create"></a>*@
</p>
<form action="NewClass"/>

<input type="hidden" name="SubRace" value="@(Request.Query["SubRace"])" />
    <table class="table">
        <thead>
            <tr>
                <th>

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubRaces[0].SubRaceName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubRaces[0].Strength)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubRaces[0].Dexterity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubRaces[0].Constitution)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubRaces[0].Wisdom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubRaces[0].Intelligence)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubRaces[0].Charisma)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubRaces[0].Size)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubRaces[0].Speed)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubRaces[0].Vision)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubRaces[0].Resistances)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubRaces[0].Proficiencies)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubRaces[0].Languages)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubRaces[0].Special)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.SubRaces)
            {


                <tr>
                    <td>
                        <input type="radio" name="SubRace" value="@item.ID" />


                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.SubRaceName)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.Strength)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.Dexterity)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.Constitution)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.Wisdom)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.Intelligence)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.Charisma)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.Size)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.Speed)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.Vision)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.Resistances)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.Proficiencies)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.Languages)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.Special)
                    </td>



                </tr>
            }
            }
        </tbody>
    </table>
    <input type="submit" value="Save" class="btn btn-primary" />
